<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="80dp"
    android:id="@+id/high_score_bg">
    
    <TextView
        android:id="@+id/high_score_rank"
        android:layout_marginStart="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/atp__leaderboard_item_rank_1"/>

    <TextView
        android:id="@+id/high_score_name"
        android:layout_marginStart="45dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="tung"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/high_score_score"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150,000,000 VND"
        android:textStyle="bold"
        android:textColor="@color/score"
        android:textSize="18sp"/>

</LinearLayout>